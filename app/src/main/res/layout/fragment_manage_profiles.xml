<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profilesExpandableListView"
        android:requiresFadingEdge="vertical"
        android:choiceMode="singleChoice"
        android:fadingEdgeLength="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noProfilesToManageImageView"
        android:src="@drawable/ic_sentiment_neutral_black_48dp"
        android:tint="#eeeeee"
        android:layout_marginBottom="32dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No profiles available"
        android:id="@+id/noProfilesToManageTextView"
        android:layout_marginTop="32dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#eeeeee"
        android:textSize="32dp"
        android:visibility="gone"/>
</RelativeLayout>