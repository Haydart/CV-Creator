<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="name"
        android:id="@+id/dropdownNameTextView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dropdownProfilePhotoImageViewMiniature"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        android:textSize="16dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/dropdownProfilePhotoImageViewMiniature"
        android:src="@drawable/blank_profile_pic"
        android:layout_margin="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/circularImageViewBorder" />
</RelativeLayout>