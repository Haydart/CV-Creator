<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="position name"
        android:id="@+id/cvPositionNameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time span"
        android:id="@+id/cvTimeSpanTextView"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/cvPositionNameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:id="@+id/cvDescriptionTextView"
        android:layout_below="@+id/cvTimeSpanTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="9dp"
        android:layout_marginRight="16dp" />
</RelativeLayout>